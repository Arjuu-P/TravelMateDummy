<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/gap_sm">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/gap_lg"
            android:layout_marginStart="@dimen/gap_xxl"
            android:background="@drawable/edit_text_bg"
            android:padding="@dimen/gap_md"
            android:layout_marginBottom="@dimen/gap_sm"
            android:paddingStart="@dimen/gap_lg"
            android:paddingEnd="@dimen/gap_lg"
            android:elevation="@dimen/gap_xsm"
            android:hint="Search"
            android:textSize="@dimen/font_lg"
            android:inputType="textCapWords"
            android:textColor="@color/app_color"
            android:drawablePadding="@dimen/gap_md"
            android:textColorHint="@color/app_color_light"
            android:layout_marginEnd="@dimen/gap_xxl"/>

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_xl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/trucking"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/gap_xl"
                    android:elevation="@dimen/gap_lg"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/gap_md">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/trucking"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/historical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/gap_xl"
                    android:elevation="@dimen/gap_lg"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/gap_md">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/historical"
                        android:scaleType="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/gap_xl"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/adventure"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/gap_xl"
                    android:elevation="@dimen/gap_lg"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/gap_md">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/adventure"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/forest"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/gap_xl"
                    android:elevation="@dimen/gap_lg"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/gap_md">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/forest"
                        android:scaleType="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/tab_bg_white_ovel"
            app:tabIndicatorHeight="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/gap_sm"
            app:tabBackground="@drawable/tab_selector"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabLayoutStyle"
            app:tabTextColor="@color/text_color"
            app:tabMode="scrollable"
            android:layout_marginStart="@dimen/gap_xsm"
            android:layout_marginEnd="@dimen/gap_xsm"
            app:tabGravity="center">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thrissur"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wayanad"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palakkad"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pathanamthitta"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alappuzha"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ernakulam"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idukki"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malappuram"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kannur"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kasaragod"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kollam"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kottayam"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kozhikode"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiruvananthapuram"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_spot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_sm"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_gravity="center"/>
</FrameLayout>